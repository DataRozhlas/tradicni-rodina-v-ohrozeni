&.god-correlator
  position relative
  left -30px
  margin-top 50px
  width 1000px
  float left
  margin-bottom 40px
  .supplemental
    width 139px
    float left
  .selector
    float left
    clear left
    margin-top 20px
    .title
      float left
      font-weight bold
      width 195px
    .list
      float left
      a
        display block
        float left
        margin 0px 5px
        color #4 !important
        &:hover
          text-decoration none
        &.active
          color prideOrange !important

  .correlator-container
    width 851px
    height 500px
    float left
    position relative
    svg
      circle
        fill prideViolet
        &.czech
          fill prideOrange
        &.slovakia
          fill prideRed
      .point
        line
          stroke-width 1
          stroke lighten(prideViolet, 90%)
          shape-rendering crispEdges
          opacity 0
        &.active
          line
            opacity 1
      .axis
        line
          stroke-width 1
          stroke lighten(prideViolet, 60%)
          shape-rendering crispEdges
        text
          opacity 0
          font-size 12px
          fill desaturate(prideViolet, 80%)
        g.min
        g.max
          text
            opacity 1
      &.hasActive
        .axis
          g.min
          g.max
            text
              opacity 0
          g.active
            text
              opacity 1
    .supplemental-x
    .supplemental-y
      position absolute
      font-size 12px
      color #6
    .supplemental-x
      bottom 27px
      right 12px
    .supplemental-y
      top 5px
      left -90px
      width 160px
      text-align right
      transform-origin 100% 0px
      transform rotate(270deg)

    .graph-tip
      width auto
      .content
        min-height 0px

