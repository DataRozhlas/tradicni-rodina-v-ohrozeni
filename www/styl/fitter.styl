#main
  width 980px
#ad-special
  display none !important
#article
  width 950px
  font-family 'Roboto', arial, helvetica,sans-serif
  background transparent !important
  .date
  .image
    display none
  > h1
    font-size 38px !important
    font-weight 300
    margin-top 10px !important
    line-height 1.8em
    margin-bottom 40px !important
    text-align center
    color white
    text-shadow 0px 0px 10px #0
    position absolute
    width 630px
  > p
    line-height 1.9em
    font-size 16px
  p.perex
    position absolute
    top 360px
    width 630px
    font-weight 300
    text-align center
    line-height 2.2em
    font-size 18px
    color white
    text-shadow 0px 0px 10px #0
  > h1
  > h2
  > h3
  > p
    margin-left 170px !important
    margin-right 170px !important
  p + img
    position relative
    left -30px
  div.eu-map
    position relative
    img + i,
    img + .legend + i
      position relative
      left -30px
      color #6
    img + .legend
      margin 0px
      padding 5px 10px
      position absolute
      clear both
      float right
      text-align right
      top 15px
      right -35px
      list-style-type none
      border 1px solid rgba(0,0,0,0.3)
      background rgba(255,255,255,0.8)
      li
        float left
        clear both
        margin 3px 0px
        position relative
        padding-left 30px
        &:after
          content " "
          position absolute
          top 0px
          left 0px
          width 20px
          height 14px
          border 1px solid #9
        &:nth-child(1):after
          background prideRed
        &:nth-child(2):after
          background prideOrange
        &:nth-child(3):after
          background #E6E6E6
        &:nth-child(4):after
          background #a
    & + p
      margin-top 40px
  .relatedWebs
    margin-top 50px !important
.author
  margin-top 60px !important
#wrapper-inner
  background transparent !important
.filling
  width 100%
  height 600px
div.hero
  font-family 'Roboto', arial, helvetica,sans-serif
  position absolute
  top 152px
  bottom -80px
  width 100%
  min-width 1000px
  background #6 url('https://samizdat.cz/data/tradicni-rodina-v-ohrozeni/www/img/pflag.jpg') no-repeat center top
  background-size cover
  .overlay
    position absolute
    top 0px
    left 0px
    bottom 0px
    width 100%
    background linear-gradient(to top, rgba(255,255,255,1) 0%, rgba(0,0,0,0.3) 25%);
    position absolute
  span.copy
    color white
    position absolute
    bottom 85px
    right 10px
    z-index 2
    text-shadow 0px 0px 10px #0
    a
      color white
      text-decoration underline
      &:hover
        text-decoration none
  a.scroll-btn
    z-index 2
    position absolute
    top 650px
    left 50%
    transform translate(-50%, 0)
    text-transform uppercase
    color white
    font-weight 300
    font-size 18px
    text-shadow 0px 0px 10px #0
    &:hover
    &:active
      text-decoration none
    &:hover:before
        background rgba(255,255,255,0.2)
    &:before
      background rgba(255,255,255,0.05)
      transition background 0.2s
      content "â€º"
      position absolute
      top -80px
      left 50%
      transform translate(-50%, 0) rotate(90deg)
      text-align center
      line-height 52px
      font-size 50px
      width 60px
      height 60px
      border 1px solid white
      font-weight 300
      box-shadow 0px 0px 5px #ffa
      border-radius 50%
  @media screen and (max-height: 820px)
    a.scroll-btn
      top 600px
      text-shadow none
      color transparent
      &:before
        color white
  @media screen and (max-height: 738px)
    a.scroll-btn
      display none
